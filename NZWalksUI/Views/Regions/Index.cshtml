@{
}
<h1 class="mt-3">Region</h1>
<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" asp-controller="Regions" asp-action="Add">Add Region</a>
</div>
<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" asp-controller="Regions" asp-action="Create">Create Region</a>
</div>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Code</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var walk in Model)
        {
            <tr>
            <td>@walk.Id</td>
            <td>@walk.Code</td>
            <td>@walk.Name</td>
            </tr>
        }
    </tbody>
</table>
@{
}
